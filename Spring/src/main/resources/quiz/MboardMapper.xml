<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="quiz.MboardMapper.xml">

    <select id="select" resultType="test.quiz.vo.BoardVo">
        select * from mboard
    </select>

    <select id="selectOne" resultType="test.quiz.vo.BoardVo" parameterType="int">
        select * from mboard where num = #{num}
    </select>

    <insert id="insert" parameterType="test.quiz.vo.BoardVo">
        insert into mboard
        values (#{num}, #{writer}, #{title}, #{content}, sysdate)
    </insert>

    <update id="update" parameterType="test.quiz.vo.BoardVo">
        update mboard
        set writer = #{writer} , title = #{title} , content= #{content}
        where num =#{num}
    </update>

    <delete id="delete" parameterType="int">
        delete from mboard
        where num = #{num}
    </delete>

</mapper>