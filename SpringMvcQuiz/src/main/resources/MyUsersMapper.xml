<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyUsersMapper.xml">

    <select id="select" resultType="test.vo.MyUsersVo">
        select * from myusers
    </select>

    <select id="isMember" parameterType="hashmap" resultType="test.vo.MyUsersVo">
        select * from myusers
        where username = #{username} and password = #{password}
    </select>

    <select id="selectOne" resultType="test.vo.MyUsersVo" parameterType="String">
        select * from myusers where username = #{username}
    </select>

    <insert id="insert" parameterType="test.vo.MyUsersVo">
        insert into myusers
        values (#{username}, #{password}, #{email})
    </insert>

    <update id="update" parameterType="test.vo.MyUsersVo">
        update myusers
        set  password = #{password} , email= #{email}
        where username = #{username}
    </update>

    <delete id="delete" parameterType="int">
        delete from myusers
        where username = #{username}
    </delete>

</mapper>